{# Main lauout classes. #}
{% set main_layout_attributes = create_attribute() %}
{% set main_layout_block = 'main-layout' %}
{%
  set main_layout_modifiers = [
    page.sidebar_right ? 'sidebar-right',
    not page.sidebar_right ? 'no-sidebars',
    page.sidebar_right ? 'one-sidebar',
  ]
%}
{%
  set main_layout_classes = [
   'layout-container',
    bem(main_layout_block, null, main_layout_modifiers),
  ]
%}
{% set footer %}
  {% include '@loremaster/page/include.footer.html.twig' %}
{% endset %}

<header class="header">
  {{ page.header }}
  {{ page.mobile_toolbar }}
</header>
{{ page.content_header }}

<main{{ main_layout_attributes.addClass(main_layout_classes) }}>
  {{ page.content }}
  {{ page.sidebar_right }}
</main>

{{ footer }}
{{ page.mobile_sidebar }}
