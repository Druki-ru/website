:root {
  --main-mobile-navigation-border-color: var(--color-light-gray);
}

[data-theme="dark"] {
  --main-mobile-navigation-border-color: var(--color-black--light-16);
}

.main-mobile-navigation__item:not(:last-child) {
  border-bottom: 1px solid var(--main-mobile-navigation-border-color);
}

.main-mobile-navigation__link {
  display: block;
  padding: var(--spacing-sm) var(--spacing-md);
}
