.main-navigation {
  list-style: none;
  margin: 0 var(--spacing-lg) 0 0;
  padding: 0;
}

.main-navigation__link {
  background-color: rgb(var(--color-white--variant-1));
  border: 1px solid var(--color-border-secondary);
  border-radius: var(--radius-xs);
  --link-color: var(--text-color);
  --link-color--hover: var(--text-color);
  display: block;
  font-size: var(--font-size-h4);
  margin: var(--spacing-sm) 0;
  padding: var(--spacing-xs) var(--spacing-lg);
  box-shadow: inset 0 0 0 1px var(--color-white), 0 1px 3px 0 rgba(var(--color-pure-black), 0.05);
}

[data-theme="dark"] .main-navigation__link {
  background-color: rgb(var(--color-eerie-black));
  border: 1px solid rgba(var(--color-white-rgb), 0.07);
  box-shadow: 0 0 0 1px rgb(var(--color-pure-black)), var(--shadow-xs);
}

.main-navigation__link:hover,
.main-navigation__link.is-active {
  background-color: var(--color-cultured);
  text-decoration: none;
}

[data-theme="dark"] .main-navigation__link:hover,
[data-theme="dark"] .main-navigation__link.is-active {
  background-color: rgba(var(--color-white-rgb), 0.1);
}
