.druki-header-search {
  position: relative;
  display: flex;
  height: 100%;
  width: 100%;
  --search-icon: url('../../../icons/8e929c/magnify.svg');
  --search-icon--hover: url('../../../icons/003cc5/magnify.svg');
}

[data-theme="dark"] .druki-header-search {
  --search-icon--hover: url('../../../icons/FFC66B/magnify.svg');
}

.druki-header-search__input {
  width: 100%;
  border: none;
  background-color: transparent;
  padding: 0 var(--page-content-gap);
}

.druki-header-search__input:hover + .druki-header-search__submit,
.druki-header-search__input:focus + .druki-header-search__submit,
.druki-header-search__submit:hover,
.druki-header-search__submit:focus {
  background-image: var(--search-icon--hover);
}

.druki-header-search__submit {
  border: none;
  background: transparent var(--search-icon) center no-repeat;
  background-size: 18px;
  width: 18px;
  height: 100%;
  position: absolute;
  left: calc(var(--page-content-gap) - 18px - var(--spacing-xs));
  padding: 0;
}
