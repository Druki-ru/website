:root {
  --selection-background: var(--color-light-gray);
  --selection-color: var(--text-color);
}

[data-theme="dark"] {
  --selection-background: rgb(var(--color-maximum-yellow-red));
  --selection-color: rgb(var(--color-eerie-black));
}

::selection {
  background: var(--selection-background);
  color: var(--selection-color);
}
