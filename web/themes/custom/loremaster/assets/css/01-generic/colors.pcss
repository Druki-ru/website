:root {
  /* Color palette. */
  --color-black: #121212;
  --color-black--light-4: #1b1b1b;
  --color-black--light-7: #212121;
  --color-black--light-12: #2d2d2d;
  --color-black--light-14: #323232;
  --color-black--light-16: #373737;
  --color-black--light-24: #4a4a4a;
  --color-black--opacity-10: rgba(0, 0, 0, 0.1);
  --color-black--opacity-50: rgba(0, 0, 0, 0.5);
  --color-white: #FFFFFF;
  --color-white--dark-1: #FCFCFC;
  --color-cultured: #F3F3F3;
  --color-platinum: #EBEBED;
  --color-light-gray: #D4D4D8;
  --color-gainsboro: #D8D9E0;
  --color-silver-metallic: #ADAEB3;
  --color-manatee: #8E929C;
  --color-dark-silver: #545560;
  --color-roman-silver: #82828C;
  --color-raisin-black: #222330;
  --color-celtic-blue: #0366D6;
  --color-denim: #035FC9;
  --color-blue-crayola: #0470EC;
  --color-fresh-sky-blue: #EBF4FF;
  --color-light-cornflower-blue: #84A9C0;
  --color-light-cornflower-blue--dark-1: #6BBCEF;
  --color-maximum-red: #D72222;
  --color-maximum-red--dark-1: #C91F1F;
  --color-maximum-red--light-1: #DE2E2E;
  --color-maximum-red--light-2: #FCEFEF;
  --color-international-orange-engineering: 186,45,11;
  --color-jade: #26A769;
  --color-sunglow: 255,210,63;
  --color-jet: #353535;
  --color-tufts-blue: 79,140,200;
  --color-minion-yellow: 255,227,71;
  --color-amber-sae-ece: 255,127,17;

  /* Utility colors. */
  --color-border: var(--color-silver-metallic);
  --color-border-secondary: var(--color-platinum);
  --color-disabled: var(--color-platinum);
}

[data-theme="dark"] {
  --color-border: var(--color-black--light-24);
  --color-border-secondary: var(--color-black--light-14);
}
