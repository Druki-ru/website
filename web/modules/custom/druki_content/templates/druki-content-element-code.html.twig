{#
/**
 * Theme implementation to display content code element.
 *
 * Available variables:
 * - attributes: The main wrapper element attributes.
 * - content: The code content.
 * - language: The code language if provided.
 */
#}
{% set code_attributes = create_attribute() %}
{%
  set code_classes = [
    language ? 'language-' ~ language,
  ]
%}
{% spaceless %}
  <pre{{ attributes }}>
    <code{{ code_attributes.addClass(code_classes) }}>
      {{- content -}}
    </code>
  </pre>
{% endspaceless %}
